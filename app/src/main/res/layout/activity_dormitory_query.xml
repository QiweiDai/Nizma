<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nizma.query.DormitoryQuery"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp">

                    <EditText
                        android:id="@+id/dormitory_query_years"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#bcbcbc"
                        android:hint="2016年"

                        android:background="@drawable/text_shape"/>

                    <!--<ImageView-->
                    <!--android:layout_width="13dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:src="@drawable/spinner_button"-->
                    <!--/>-->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp">

                    <EditText
                        android:id="@+id/dormitory_query_month"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#bcbcbc"
                        android:hint="1月"

                        android:background="@drawable/text_shape"/>

                    <!--<ImageView-->
                    <!--android:layout_width="13dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:src="@drawable/spinner_button"-->
                    <!--/>-->

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="10dp">

                    <EditText
                        android:id="@+id/dormitory_query_day"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#bcbcbc"
                        android:hint="13日"

                        android:background="@drawable/text_shape"/>

                    <!--<ImageView-->
                    <!--android:layout_width="13dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:src="@drawable/spinner_button"-->
                    <!--/>-->

                </LinearLayout>
                <!--<LinearLayout-->
                    <!--android:id="@+id/dormitory_query_qinshilinearlayout"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1.4"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_marginTop="7dp"-->
                    <!--android:layout_marginBottom="7dp"-->
                    <!--android:background="@drawable/spinnerborder">-->

                    <!--<TextView-->
                        <!--android:id="@+id/dormitory_query_qinsh"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:gravity="left|center_vertical"-->
                        <!--android:text="嵩阳苑619"-->
                        <!--android:textSize="12sp"-->
                        <!--android:textColor="#bcbcbc"-->
                        <!--android:layout_weight="1"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:textAppearance="?android:attr/textAppearanceLarge" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="13dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:src="@drawable/spinner_button"-->
                        <!--/>-->
                <!--</LinearLayout>-->
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:id="@+id/dormitory_query_linearlayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/spinnerborder"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp">

                    <TextView
                        android:id="@+id/dormitory_query_class"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="计算机1421"
                        android:textSize="12sp"
                        android:textColor="#bcbcbc"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/spinner_button"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/dormitory_query_student"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:hint="学生姓名(选填)"
                    android:textSize="12sp"
                    android:textColor="#bcbcbc"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/text_shape"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:paddingLeft="5dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:text="查询"
                    android:id="@+id/dormitory_query_button"
                    android:textSize="12sp"
                    android:background="@drawable/button_shape"
                    android:textColor="#fff"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/classname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="计算机1421-当天未准勤学生"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginBottom="2dp"
                android:textSize="12sp"
                android:textColor="#bcbcbc"
                android:background="#fff"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dormitory_query_list" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
